<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Authentication.AuthenticationFragments.ChoosePersonFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".9"
            android:background="@color/black"
            android:padding="24dp">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                >

                <RadioButton
                    android:id="@+id/radioButton_Customer"
                    android:layout_width="286dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="52dp"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:text="Customer"
                    android:textColor="@color/white"

                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="-3dp" />

                <RadioButton

                    android:id="@+id/radioButton_Driver"
                    android:layout_width="283dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:text="Driver"
                    android:textColor="@color/white"

                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton_Customer"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="-2dp" />

                <RadioButton
                    android:id="@+id/radioButton_Employee"
                    android:layout_width="294dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:text="Employee"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton_Driver"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="-2dp" />
            </RadioGroup>
            <Button
                android:id="@+id/BtnLetsGo"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/white"
                android:text="Let's Go"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>